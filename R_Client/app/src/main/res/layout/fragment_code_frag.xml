<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="50dp"
    android:id="@+id/parentL"
    android:background="@android:color/white"
    android:layout_centerInParent="true"
    tools:context=".Fragments.CodeFRag">

    <TextView
        android:id="@+id/tvcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fill in the received code.."
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <!--<TextView-->
            <!--android:id="@+id/timerTxt"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="00:00"-->
            <!--android:gravity="right"-->
            <!--android:layout_marginLeft="140dp"-->
            <!--android:textSize="15dp"-->
            <!--android:clickable="true"/>-->

    </LinearLayout>

    <EditText
        android:id="@+id/receivedCode"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/black_border"
        android:hint="input code"
        android:gravity="center"
        android:inputType="number"
        android:layout_margin="20dp"/>

    <ImageButton
        android:id="@+id/confCode"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_check_circle_black_24dp"
        android:layout_gravity="center"/>

</LinearLayout>